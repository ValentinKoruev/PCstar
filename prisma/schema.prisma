// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Item {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  title         String  
  price         Float     @default(0)
  prevPrice     Float?    
  description   String? 
  specs         String[]  @default([])
  categories    String[]
  tags          String[]  @default([])
  imageSrc      String
}

model Category {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  title         String
  name          String
  parent        String
  category      String    
  tags          String[]  @default([])
}